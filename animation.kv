#: import menu menu
# #:set image_size dp(200)

<GameLayout>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/background.jpg'
    menu_widget: menu_widget
    MenuWidget:
        id: menu_widget
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: str(int(root.score)) + "  :דוקינ"
            color: 0,0,0,1
            font_size: '40dp'
            font_name: "fonts/dragon.ttf"
            size_hint: 1, 0.2

        Label:
            Button:
                id: "child"
                pos: root.child_position_x,root.child_position_y
                size: dp(root.IMAGE_SIZE), dp(root.IMAGE_SIZE)
                size_hint: None,None
                background_color: 0,0,0,0
                on_press: root.button_clicked()
                Image:
                    source: "images/boy.gif"
                    anim_delay: 0.05
                    size: self.parent.size
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

